year <- sub("-.*", "", meta$Date)
note <- sprintf("seqminer version %s", meta$Version)

bibentry(bibtype = "article",
         title = "SeqMiner: a toolset for annotating and querying next-generation sequence data",
         author = c(person("Xiaowei", "Zhan"), person("Dajiang J", "Liu")),
         journal = "Genetic Epidemiology",
         year = {2015},
         note = note,
         url = "http://seqminer.genomic.codes"
         )
